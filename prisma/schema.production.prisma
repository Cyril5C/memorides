// Production Prisma schema for PostgreSQL
// Used for export/import operations on Railway

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client-prod"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Track {
  id           String    @id @default(cuid())
  filename     String    @unique
  name         String
  title        String?   // Custom title for the track
  comments     String?   // User comments about the track
  type         String    // 'hiking', 'cycling', 'gravel', or 'road'
  direction    String    @default("one-way") // 'one-way', 'round-trip', or 'loop'
  color        String    @default("#2563eb")
  distance     Float     // in kilometers
  elevation    Float     // in meters
  duration     Float?    // in minutes
  completedAt  DateTime? // Date when the track was completed (null = project/to-do)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  photos       Photo[]   // Photos associated with this track
  labels       TrackLabel[]  // Labels associated with this track

  @@index([createdAt])
  @@index([type])
  @@index([completedAt])
}

model Label {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  tracks    TrackLabel[]  // Tracks with this label

  @@index([name])
}

model TrackLabel {
  id        String   @id @default(cuid())
  trackId   String
  labelId   String
  track     Track    @relation(fields: [trackId], references: [id], onDelete: Cascade)
  label     Label    @relation(fields: [labelId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([trackId, labelId])
  @@index([trackId])
  @@index([labelId])
}

model Photo {
  id        String   @id @default(cuid())
  filename  String   @unique
  name      String
  path      String
  latitude  Float
  longitude Float
  createdAt DateTime @default(now())
  trackId   String?  // Optional: photo can be linked to a track
  track     Track?   @relation(fields: [trackId], references: [id], onDelete: SetNull)

  @@index([createdAt])
  @@index([trackId])
}

model TrackType {
  id        String   @id @default(cuid())
  value     String   @unique  // 'hiking', 'cycling', 'gravel', etc.
  label     String              // Display name: 'RandonnÃ©e', 'VÃ©lo route', etc.
